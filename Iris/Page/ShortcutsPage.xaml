<UserControl x:Class="Iris.Page.ShortcutsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Iris.Page"
             xmlns:widgets="clr-namespace:Iris.Widget"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <widgets:ShortcutWidget Grid.Row="0" Grid.Column="0" DisplayName="Eogend" Description="Site principal d'Eogend" Url="https://eogend.fr" />
            <widgets:ShortcutWidget Grid.Row="0" Grid.Column="1" DisplayName="YouTube" Description="Site de partage de vidéos" Url="https://www.youtube.com" />
            <widgets:ShortcutWidget Grid.Row="0" Grid.Column="2" DisplayName="Herobrine.fr" Description="Site principale d'HB.fr" Url="https://herobrine.fr" />

        </Grid>
    </ScrollViewer>
</UserControl>
