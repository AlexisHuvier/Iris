<UserControl x:Class="Iris.Page.UptimePage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Iris.Page"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="20">
        <TextBlock Text="Dernier Reload : /" FontWeight="Bold" FontSize="20" Margin="0,0,0,5" TextAlignment="Center" Name="LastReload"/>
        <Button Content="Reload" Margin="0,10,0,0" Padding="10,5" Style="{StaticResource MaterialDesignRaisedButton}" Click="ReloadPage"/>
        <ListBox Name="UptimeWidgetsContainer" Style="{StaticResource MaterialDesignCardsListBox}" VerticalAlignment="Stretch" HorizontalAlignment="Center" Margin="0,10,0,0">
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel />
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>
        </ListBox>
    </StackPanel>
</UserControl>
