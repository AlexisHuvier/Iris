<Window x:Class="Iris.MainWindow" Style="{StaticResource MaterialDesignWindow}"
        Background="{DynamicResource MaterialDesignPaper}"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Iris"
        xmlns:pages="clr-namespace:Iris.Page"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <materialDesign:DrawerHost IsLeftDrawerOpen="{Binding ElementName=MenuToggleButton, Path=IsChecked}">
        <materialDesign:DrawerHost.LeftDrawerContent>
            <materialDesign:ColorZone Padding="16" Mode="PrimaryDark" DockPanel.Dock="Top" Width="212" VerticalAlignment="Stretch">
                <DockPanel>
                    <ToggleButton Style="{StaticResource MaterialDesignHamburgerToggleButton}"
                              DockPanel.Dock="Top" HorizontalAlignment="Right"
                              Margin="16" IsChecked="{Binding ElementName=MenuToggleButton, Path=IsChecked, Mode=TwoWay}" />
                    <Menu>
                        <Menu.ItemsPanel>
                            <ItemsPanelTemplate>
                                <VirtualizingStackPanel/>
                            </ItemsPanelTemplate>
                        </Menu.ItemsPanel>
                        <MenuItem Header="Accueil" Foreground="White" Click="OpenHome" />
                        <MenuItem Header="Raccourcis" Foreground="White" Click="OpenShortcuts" />
                    </Menu>
                </DockPanel>
            </materialDesign:ColorZone>
        </materialDesign:DrawerHost.LeftDrawerContent>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition />
            </Grid.RowDefinitions>

            <materialDesign:ColorZone Padding="16" Mode="PrimaryDark" DockPanel.Dock="Top">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <ToggleButton Style="{StaticResource MaterialDesignHamburgerToggleButton}" IsChecked="False"
                                x:Name="MenuToggleButton" Grid.Column="0"/>
                    <Label Content="IRIS" Grid.Column="1" Style="{StaticResource MaterialDesignLabel}" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="22" Foreground="White"/>
                </Grid>
            </materialDesign:ColorZone>

            <pages:HomePage x:Name="HomePage" Grid.Row="1" />
            <pages:ShortcutsPage x:Name="ShortcutsPage" Grid.Row="1" Visibility="Collapsed" />
        </Grid>
    </materialDesign:DrawerHost>
</Window>
