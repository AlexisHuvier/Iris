<UserControl x:Class="Iris.Widget.UptimeWidget"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Iris.Widget"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Width="400" Height="150">
    <Border Grid.Row="0" Grid.Column="0" Margin="5" Padding="10" Background="{DynamicResource MaterialDesignPaper}" CornerRadius="4">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Monitor 1" FontWeight="Bold" FontSize="20" Margin="0,0,0,5" TextAlignment="Center" Name="TitleLabel"/>
            <TextBlock Text="Type : HTML - Uptime: 99.99% - Dernier Etat : Up" FontSize="16" Margin="0,5,0,0" TextAlignment="Center" Name="UptimeLabel"/>
            <Button Content="Ouvrir l'URL" Margin="0,10,0,0" Padding="10,5" Style="{StaticResource MaterialDesignRaisedButton}" Click="OpenUrl" Name="UrlButton"/>
        </StackPanel>
    </Border>
</UserControl>
