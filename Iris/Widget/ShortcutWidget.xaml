<UserControl x:Class="Iris.Widget.ShortcutWidget"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Iris.Widget"
             mc:Ignorable="d" 
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             d:DesignHeight="450" d:DesignWidth="800">

    <Border Grid.Row="0" Grid.Column="0" Margin="5" Padding="10" Background="{DynamicResource MaterialDesignPaper}" CornerRadius="4">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Shortcut 1" FontWeight="Bold" FontSize="20" Margin="0,0,0,5" TextAlignment="Center" Name="TitleLabel"/>
            <TextBlock Text="Description for shortcut 1." TextWrapping="Wrap" FontSize="18"  TextAlignment="Center" Name="DescriptionLabel"/>
            <Button Content="Ouvrir le Raccourci" Margin="0,10,0,0" Padding="10,5" Style="{StaticResource MaterialDesignRaisedButton}" Click="OpenUrl"/>
        </StackPanel>
    </Border>
</UserControl>
